<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="be.kapture.entities.ClothingItem" table="ClothingItem">
		<meta attribute="class-description">
			This class contains the person detail.
		</meta>
		<id name="id" type="int" column="id">
			<generator class="native" />
		</id>
		<property name="size" column="Size" type="integer" not-null="true" />
		<property name="color" column="Color" type="string"
			not-null="true" />
	</class>
</hibernate-mapping>